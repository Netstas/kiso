@model kiso.Models.Admin

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
    <link href="~/css/login.min.css" rel="stylesheet" />
    <link href="~/css/login.css" rel="stylesheet" />
</head>
<body>
    <main class="main">
        <div class="container">
          <section class="wrapper">
                <div class="heading">
                    <h1 class="text text-large">Sign In</h1>
                </div>
                <form asp-action="Login" class="form">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="input-control">
                        <input asp-for="Username" class="input-field" placeholder="Username" />
                        <span asp-validation-for="Username" class="text-danger"></span>
                    </div>
                    <div class="input-control">
                        <input asp-for="Password" type="password" class="input-field" placeholder="Password" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Login" class="input-submit"  />
                    </div>
                </form>
            </section>
        </div>
    </main>

</body>
</html>
